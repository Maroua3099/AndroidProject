<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:cardCornerRadius="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:elevation="18dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userpicture"
                    android:layout_width="60dp"
                    android:layout_centerHorizontal="true"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/white"
                    android:src="@drawable/usericone"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="centerCrop"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp">
                </de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:id="@+id/lastnameuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/userpicture"
                    ></TextView>
                    <TextView
                        android:id="@+id/firstnameuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prenom"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/lastnameuser"
                        ></TextView>
                    <TextView
                        android:id="@+id/bullet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢"
                        android:textStyle="normal"
                        android:textSize="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/firstnameuser">
                    </TextView>
                    <TextView
                        android:id="@+id/keyid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:text=""
                        android:layout_centerHorizontal="true"
                        android:layout_alignBaseline="@id/firstnameuser"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/bullet">
                    </TextView>
                    <TextView
                        android:id="@+id/filialeuser"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Filiale"
                        android:textStyle="normal"
                        android:textSize="15dp"
                        android:layout_below="@id/lastnameuser"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@id/userpicture"
                        android:layout_marginLeft="10dp">
                    </TextView>
                    <View
                        android:id="@+id/myview"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#adafb6"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/userpicture">
                    </View>
                    <TextView
                        android:id="@+id/emailuser"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Email"
                        android:textStyle="normal"
                        android:textSize="17dp"
                        android:layout_marginTop="90dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp">
                    </TextView>
                    <TextView
                        android:id="@+id/mdpuser"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Mot de passe"
                        android:textStyle="normal"
                        android:textSize="17dp"
                        android:layout_marginTop="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:visibility="gone">
                    </TextView>
                    <TextView
                        android:id="@+id/contactuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textStyle="normal"
                        android:textSize="17dp"
                        android:layout_marginTop="130dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp">
                    </TextView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>