<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fonctionnalités"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#0066ce">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appels"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp">
        </TextView>

        <TextView
            android:id="@+id/active1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/text1"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            >
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/iconecall"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp">
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messagerie"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp">
        </TextView>

        <TextView
            android:id="@+id/active2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/text2"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:visibility="invisible">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/iconechat"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp">
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WhatsApp"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp">
        </TextView>

        <TextView
            android:id="@+id/active3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/text3"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:visibility="invisible">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/iconewtp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp">
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Microsoft Teams"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp">
        </TextView>

        <TextView
            android:id="@+id/active4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/text4"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:visibility="invisible">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/iconeteams"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp">
        </ImageView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#0066ce">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">
        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Changer mot de passe"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/editprofile"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp">
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Déconnexion"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#0066ce">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">
        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Se déconnecter"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/poweroff"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp">
        </ImageView>
    </RelativeLayout>

</LinearLayout>